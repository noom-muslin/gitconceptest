{
  "type": "BoxLayout",
  "options": {
    "sx": {
      "maxWidth": "400px",
      "minWidth": "400px"
    }
  },
  "elements": [
    {
      "type": "StackLayout",
      "options": {
        "container": true,
        "direction": "row",
        "spacing": "16px",
        "sx": {
          "padding": "16px"
        }
      },
      "elements": [
        {
          "type": "PaperLayout",
          "options": {
            "variant": "iconWarning"
          },
          "elements": [
            {
              "type": "Icon",
              "label": "HelpOutlineOutlined"
            }
          ]
        },
        {
          "type": "BoxLayout",
          "elements": [
            {
              "type": "Typography",
              "label": "คุณต้องการบันทึกแบบร่างหรือไม่",
              "options": {
                "variant": "subtitle2Dark",
                "sx": {
                  "marginBottom": "8px",
                  "display": "block"
                }
              }
            },
            {
              "type": "Typography",
              "label": "เมื่อกดบันทึกแล้ว ระบบจะบันทึกข้อมูล และคุณจะกลับไปที่หน้าหลัก"
            }
          ]
        }
      ]
    },
    {
      "type": "StackLayout",
      "options": {
        "direction": "row",
        "justifyContent": "flex-end",
        "spacing": "8px",
        "sx": {
          "padding": "16px"
        }
      },
      "elements": [
        {
          "type": "ActionButton",
          "label": "ยกเลิก",
          "options": {
            "variant": "secondary",
            "operationType": "modal",
            "subtype": "cancel",
            "chain": [
              {
                "operationType": "modal",
                "subtype": "cancel"
              },
              {
                "operationType": "open",
                "route": "/inputFOS"
              }
            ]
          }
        },
        {
          "type": "ActionButton",
          "label": "บันทึก",
          "options": {
            "chain": [
              {
                "operationType": "action",
                "conditionTypeId": "Input_FOS_Detail_Save",
                "payload": {
                  "userId": "{user.login}",
                  "taskId": "{route.taskId}"
                }
              },
              {
                "if": {
                  "type": "object",
                  "required": ["data"],
                  "properties": {
                    "data": {
                      "type": "object",
                      "required": ["payload"],
                      "properties": {
                        "payload": {
                          "type": "object",
                          "required": ["data"],
                          "properties": {
                            "data": {
                              "required": ["status"],
                              "type": "object",
                              "properties": {
                                "status": {
                                  "type": "object",
                                  "required": ["code"],
                                  "properties": {
                                    "code": {
                                      "type": "number",
                                      "const": 1000
                                    }
                                  }
                                }
                              }
                            }
                          }
                        }
                      }
                    }
                  }
                },
                "chain": [
                  {
                    "operationType": "modal",
                    "subtype": "cancel"
                  },
                  {
                    "operationType": "script",
                    "converter": "setInputFosSaveModalPage"
                  },
                  {
                    "operationType": "open",
                    "route": "/inputFOS"
                  }
                ]
              },
              {
                "if": {
                  "else": true
                },
                "operationType": "modal",
                "dialogName": "m_BasicError_TryAgain",
                "subtype": "show"
              }
            ]
          }
        }
      ]
    }
  ]
}

{
    "type": "BoxLayout",
    "elements": [
      {
        "type": "BoxLayout",
        "options":{
          "sx": {
            "width": "400px",
            "padding": "1em"
          }
        },
        "elements": [
          {
            "type": "GridLayout",
            "options": {
              "container": true
            },
            "elements": [
              {
                "type": "GridLayout",
                "options": {
                  "xs": 2,
                  "container": true,
                  "justifyContent": "center"
                },
                "elements": [
                  {
                    "type": "Icon",
                    "label": "HelpOutline",
                    "options": {
                      "sx": {
                        "fontSize": "40px",
                        "color": "#EAB308",
                        "background": "#FEFCE8",
                        "borderRadius": "24px",
                        "padding": "4px"
                      }
                    }
                  }
                ]
              },
              {
                "type": "GridLayout",
                "options": {
                  "xs": 10
                },
                "elements": [
                  {
                    "type": "Typography",
                    "label": "คุณต้องการส่งข้อมูลหรือไม่",
                    "options": {
                      "variant": "subtitle2Black"
                    }
                  },
                  {
                    "type": "Typography",
                    "label": "เมื่อกดส่งข้อมูลแล้ว ข้อมูลนี้จะถูกส่งไปยัง Station ถัดไป",
                    "options": {
                      "variant": "body2"
                    }
                  }
                ]
              }
            ]
          }
        ]
      },
      {
        "type": "StackLayout",
        "options": {
          "direction": "row",
          "justifyContent": "flex-end",
          "spacing": "0.5em",
          "sx":{
            "width": "400px",
            "padding":"1em"
          }
        },
        "elements": [
          {
            "type": "ActionButton",
            "label": "ยกเลิก",
            "options": {
              "className": "secondaryButton",
              "operationType": "modal",
              "subtype": "cancel"
            }
          },
          {
            "type": "ActionButton",
            "label": "ส่งข้อมูล",
            "options": {
              "className": "primaryButton",
              "chain": [
                {
                  "operationType": "action",
                  "conditionTypeId": "RCVerify_ListDetails_Submit",
                  "payload": {
                    "taskId": "{route.taskId}",
                    "task_type": "WebVerify",
                    "enum_isic_code":""
                  }
                },
                {
                  "if": {
                    "else": true
                  },
                  "operationType": "modal",
                  "dialogName": "m_RCVerifyHR_Details_Error",
                  "subtype": "show"
                },
                {
                  "if": {
                    "type": "object",
                    "required": [
                      "data"
                    ],
                    "properties": {
                      "data": {
                        "type": "object",
                        "required": [
                          "payload"
                        ],
                        "properties": {
                          "payload": {
                            "required": [
                              "valid"
                            ],
                            "type": "object",
                            "properties": {
                              "valid": {
                                "type": "boolean",
                                "const": true
                              }
                            }
                          }
                        }
                      }
                    }
                  },
                  "chain": [
                    {
                      "operationType": "modal",
                      "subtype": "cancel"
                    },
                    {
                      "operationType": "open",
                      "route": "/webverify/{route.taskId}/list"
                    }
                  ]
                }
              ]
            }
          }
        ]
      }
    ]
  }
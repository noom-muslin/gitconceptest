              "elements": [
                {
                  "type": "ActionButton",
                  "label": "บันทึกข้อมูล",
                  "options": {
                    "variant": "primary",
                    "validationSchema": false,
                    "formValidationErrors": "show",
                    "chain": [
                      {
                        "chain": [
                          {
                            "operationType": "action",
                            "conditionTypeId": "PositionManagement_Update"
                          },
                          {
                            "if": {
                              "else": true
                            },
                            "operationType": "open",
                            "route": "/position-management"
                          }
                        ]
                      }
                    ]
                  }
                }
              ]
            }
          ]

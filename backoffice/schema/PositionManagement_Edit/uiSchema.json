    {
      "type": "PaperLayout",
      "options": {
        "variant": "bottomFixed"
      },
      "elements": [
        {
          "type": "StackLayout",
          "options": {
            "direction": "row-reverse",
            "justifyContent": "space-between"
          },
          "elements": [
            {
              "type": "StackLayout",
              "options": {

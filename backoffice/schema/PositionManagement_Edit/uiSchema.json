              "options": {
                "fullwidth": true,
                "variant": "outlined"
              },
              "errors": {
                "required": "กรุณาระบุข้อมูลให้ครบถ้วน"
              }
            }
          ]
        },
        {
          "type": "BoxLayout",
          "options": {
            "sx": {
              "display": "flex",
              "margin": "16px",
              "width": "50%",
              "paddingRight": "24px"
            }
          },
          "elements": [
            {
              "type": "SelectField",
              "label": "สถานะ",
              "scope": "#/properties/status",
              "options": {
                "fullwidth": true,
                "autocomplete": true,
                "enumDataPath": "status",
                "variant": "outlined",
                "enum": [
                  {
                    "value": true,
                    "label": "Active"
                  },
                  {
                    "value": false,
                    "label": "Inactive"
                  }
                ],
                "sx": {
                  "width": "100%"
                }
              },
              "errors": {
                "required": "กรุณาระบุข้อมูลให้ครบถ้วน"

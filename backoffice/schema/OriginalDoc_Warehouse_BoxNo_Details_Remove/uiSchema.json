{
  "type": "BoxLayout",
  "elements": [
    {
      "type": "BoxLayout",
      "options": {
        "sx": {
          "width": "400px",
          "padding": "1em"
        }
      },
      "elements": [
        {
          "type": "GridLayout",
          "options": {
            "container": true
          },
          "elements": [
            {
              "type": "GridLayout",
              "options": {
                "xs": 2,
                "container": true,
                "justifyContent": "center"
              },
              "elements": [
                {
                  "type": "Icon",
                  "label": "HelpOutline",
                  "options": {
                    "sx": {
                      "fontSize": "40px",
                      "color": "#EAB308",
                      "background": "#FEFCE8",
                      "borderRadius": "24px",
                      "padding": "4px"
                    }
                  }
                }
              ]
            },
            {
              "type": "GridLayout",
              "options": {
                "xs": 10
              },
              "elements": [
                {
                  "type": "Typography",
                  "label": "คุณต้องการลบข้อมูลหรือไม่",
                  "options": {
                    "variant": "subtitle2Black"
                  }
                },
                {
                  "type": "Typography",
                  "label": "เมื่อกดบันทึกข้อมูลแล้ว ข้อมูลนี้จะถูกลบ",
                  "options": {
                    "variant": "body2"
                  }
                }
              ]
            }
          ]
        }
      ]
    },
    {
      "type": "StackLayout",
      "options": {
        "direction": "row",
        "justifyContent": "flex-end",
        "spacing": "0.5em",
        "sx": {
          "width": "400px",
          "padding": "1em"
        }
      },
      "elements": [
        {
          "type": "ActionButton",
          "label": "ยกเลิก",
          "options": {
            "className": "secondaryButton",
            "operationType": "modal",
            "subtype": "cancel"
          }
        },
        {
          "type": "ActionButton",
          "label": "ลบ",
          "options": {
            "className": "primaryButton",
            "chain": [
              {
                "operationType": "action",
                "conditionTypeId": "OriginalDoc_BoxNo_Delete",
                "payload": {
                  "userId": "{user.login}",
                  "applicationGroupId": "Auto"
                }
              },
              {
                "if": {
                  "type": "object",
                  "required": ["data"],
                  "properties": {
                    "data": {
                      "type": "object",
                      "required": ["payload"],
                      "properties": {
                        "payload": {
                          "type": "object",
                          "required": ["valid"],
                          "properties": {
                            "valid": {
                              "type": "boolean",
                              "const": true
                            }
                          }
                        }
                      }
                    }
                  }
                },
                "chain": [
                  {
                    "subtype": "close",
                    "operationType": "modal"
                  },
                  {
                    "operationType": "open",
                    "route": "/originaldoc/warehouseadmin/boxno",
                    "payload": {
                      "userId": "{user.login}",
                      "applicationGroupId": "Auto",
                      "status": {
                        "code": 0
                      }
                    }
                  }
                ]
              },
              {
                "if": {
                  "else": true
                },
                "operationType": "modal",
                "dialogName": "m_OriginalDoc_Details_Error",
                "subtype": "show"
              }
            ]
          }
        }
      ]
    }
  ]
}

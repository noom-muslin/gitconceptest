                          "type": "object",
                          "required": [
                            "data"
                          ],
                          "properties": {
                            "data": {
                              "required": [
                                "submitted"
                              ],
                              "type": "object",
                              "properties": {
                                "submitted": {
                                  "type": "boolean",
                                  "const": true
                                }
                              }
                            }
                          }
                        }
                      }
                    }
                  }
                },
                "chain": [
                  {
                    "operationType": "modal",
                    "subtype": "cancel"
                  },
                  {
                    "operationType": "open",
                    "route": "/callverify"
                  }
                ]
              }
            ]
          }
        }
      ]

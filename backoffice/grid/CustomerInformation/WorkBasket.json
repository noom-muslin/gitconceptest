          "options": {
            "operationType": "open",
            "permission": "p_CustomerInformation",
            "route": "/ci/{data.id}/details"
          }
        }
      ],
      "width": 80
    },
    {
      "title": " ",
      "name": "get_tast",
      "sortable": false,
      "locked": true,
      "rowActions": [
        {
          "label": "Get Task",
          "triggerType": "link",
          "options": {
            "chain": [
              {
                "operationType": "script",
                "converter": "reset_notification",
                "resultMappingSchema": {
                  "type": "object",
                  "properties": {
                    "previous_user": {
                      "type": "object",
                      "properties": {
                        "code": {
                          "type": "integer"
                        }
                      }
                    }
                  }
                }
              },
              {
                "operationType": "action",
                "conditionTypeId": "Check_User_GetTask",
                "permission": "p_CustomerInformation",
                "payload": {
                  "userId": "{user.login}",
                  "performingBy": "{data.previous_task.performing_by}",
                  "taskId": "{data.id}",
                  "routeUrl": "/ci",
                  "flagChecker": "{data.op_loan.op_loans_customer_informations[0].flag_checker}"
                }
              }
            ]
          }
        }
      ],
      "width": 150
    }

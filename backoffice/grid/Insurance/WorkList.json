    },
    {
      "title": "ประเภทหลักประกัน",
      "field": "application.collateral_securities",
      "name": "security_type",
      "converter": "security_type_converter",
      "minWidth": 150
    },
    {
      "title": "การตัดบัญชีวันที่",
      "field": "application.accounts",
      "name": "settlement_date",
      "converter": "account_settlement_date_converter",
      "minWidth": 150
    },
    {
      "title": "เริ่มมีผลไถ่ถอนวันที่",
      "field": "application.collateral_securities",
      "name": "apprisal_date",
      "converter": "apprisal_date_converter",
      "minWidth": 150
    },
    {
      "title": " ",
      "name": "",
      "sortable": false,
      "locked": false,
      "rowActions": [
        {
          "label": "Check account status",
          "triggerType": "link",
          "options": {
            "chain": [
              {
                "operationType": "script",
                "converter": "reset_notification",
                "resultMappingSchema": {
                  "type": "object",
                  "properties": {
                    "check_status": {
                      "type": "object",
                      "properties": {
                        "code": {
                          "type": "integer"
                        }
                      }
                    }
                  }
                }
              },
              {
                "operationType": "action",
                "conditionTypeId": "Insurance_CheckStatus",
                "permission": "p_Insurance",
                "payload": {
                  "userId": "{user.login}",
                  "accountId": "{data.op_loan.account_number}"
                }
              }
            ]
          }
        }
      ],
      "width": 100
    },
    {
      "title": "ส่งกลับ WB",
      "name": "send_wb",
      "sortable": false,
      "locked": true,
      "rowActions": [
        {
          "label": "Send to Work Basket",
          "triggerType": "link",
          "options": {
            "chain":[
              {
                "operationType": "script",
                "converter": "reset_notification",
                "resultMappingSchema": {
                  "type": "object",
                  "properties": {
                    "send_wb": {
                      "type": "object",
                      "properties": {
                        "code": {
                          "type": "integer"
                        }
                      }
                    }
                  }
                }
              },
              {
                "operationType": "action",
                "conditionTypeId": "Insurance_Send_to_WorkBasket",
                "permission": "p_Insurance",
                "payload": {
                  "userId": "{user.login}",
                  "performingBy": "{data.performing_by}",
                  "taskId": "{data.id}",
                  "routeUrl": "/insurance"
                }
              }
            ]
          }
        }
      ],
      "width": 100
    },
    {
      "name": "",
      "field": "id",
      "title": " ",
      "sortable": false,
      "locked": true,
      "rowActions": [
        {
          "label": "ดูเอกสาร",
          "type": "ActionButton",
          "options": {
            "variant" : "href",
              "operationType": "script",
              "converter": "openDocumentumLinkfromGrid",
              "payload": {
                "task_id": "{data.id}"              
              }
          }
        }
      ],
      "width": 140
    },
    {
      "name": "op_details",
      "title": " ",
      "sortable": false,
      "locked": true,
      "rowActions": [
        {
          "label": "รายละเอียด OP",
          "triggerType": "link",
          "options": {
            "operationType": "open",
            "permission": "p_Insurance",
            "route": "/insurance/{data.id}/details"
          }
        }
      ],
      "width": 140
    },
    {
      "name": "ca_details",
      "title": " ",
      "sortable": false,
      "locked": true,
      "rowActions": [
        {
          "label": "ดู CA",
          "triggerType": "link",
          "options": {
            "operationType": "open",
            "permission": "p_Insurance",
            "route": "/insurance/{data.id}/details"
          }
        }
      ],
      "width": 30
    },
    {
      "name": "view_details",
      "title": " ",
      "sortable": false,
      "locked": true,
      "rowActions": [
        {
          "label": "View Detail",
          "triggerType": "link",
          "options": {
            "chain": [
              {
                "operationType": "action",
                "conditionTypeId": "Insurance_input_detail_inquiry",
                "payload": {
                  "taskId": "{data.id}"
                }
              },
              {
                "operationType": "modal",
                "dialogName": "m_Insurance_Input",
                "subtype": "show"
              }
            ]
          }
        }
      ],
      "width": 120
    }
  ],
  "initialSort": [
    {
      "field": "create_date_time",
      "dir": "desc"
    }
  ]
}